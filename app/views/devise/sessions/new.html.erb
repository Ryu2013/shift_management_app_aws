<% content_for :head do %>
  <%= stylesheet_link_tag "devise/registrations", "data-turbo-track": "dynamic" %>
<% end %>

<div class="auth-container">
  <div class="auth-card fade-in-up">
    
    <div class="auth-header">
      <h2 class="auth-title"><%= t(".heading") %></h2>
      <p class="auth-subtitle">お疲れ様です。<br>アカウントにログインしてください。</p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }, html: { class: "auth-form" }) do |f| %>
      
      <div class="form-group">
        <%= f.label :email, t(".email"), class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input", placeholder: "example@email.com" %>
      </div>

      <div class="form-group">
        <%= f.label :password, t(".password"), class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
      </div>

      <%# OTP（二段階認証）入力欄 %>
      <div class="form-group">
        <%= f.label :otp_attempt, t(".otp_attempt_label"), class: "form-label" %>
        <%= f.text_field :otp_attempt,
              autocomplete: "one-time-code",
              inputmode: "numeric",
              class: "form-input",
              placeholder: "6桁のコードを入力（設定済みの場合）" %>
      </div>

      <div class="form-actions">
        <%= f.submit t(".submit"), class: "btn btn-primary btn-block shadow-pulse" %>
      </div>
    <% end %>

    <%# --- 区切り線 --- %>
    <div class="auth-divider">
      <span class="divider-text">または</span>
    </div>

    <%# --- Googleログイン --- %>
    <div class="social-login">
      <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "btn btn-google btn-block" do %>
        <svg class="google-icon" viewBox="0 0 24 24">
          <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
          <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
          <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
          <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
        </svg>
        <span>Googleでログイン</span>
    </div>

    <div class="auth-footer-links">
        <span class="text-muted text-small">アカウントをお持ちでないですか？</span><br>
        <%= link_to "新規登録はこちら", new_registration_path(resource_name), class: "text-link" %>
      
      <div class="mt-05">
          <%= link_to "確認メールが届かない場合", new_confirmation_path(resource_name), class: "text-link-sm" %>        <% end %>
      </div>

      <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
        <%= link_to "アカウントがロックされた場合", new_unlock_path(resource_name), class: "text-link-sm" %>
      <% end %>
    </div>
  </div>

</div>
