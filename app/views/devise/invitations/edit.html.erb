<% content_for :head do %>
  <%= stylesheet_link_tag "devise/registrations", "data-turbo-track": "dynamic" %>
<% end %>

<div class="auth-container">
  <div class="auth-card fade-in-up">

    <div class="auth-header">
      <h2 class="auth-title"><%= t("devise.invitations.edit.header") %></h2>
      <p class="auth-subtitle">
        招待を受け付けました。<br>
        パスワードを設定してアカウント登録を完了してください。
      </p>
    </div>

    <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put, class: "auth-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :invitation_token, readonly: true %>

      <% if f.object.class.require_password_on_accepting %>
        
        <div class="form-group">
          <%= f.label :password, class: "form-label" %>
          <% if @minimum_password_length %>
            <span class="password-hint"><%= t("devise.shared.minimum_password_length", count: @minimum_password_length) %></span>
          <% end %>
          <%= f.password_field :password, class: "form-input", placeholder: "新しいパスワードを入力", autocomplete: "new-password" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, class: "form-label" %>
          <%= f.password_field :password_confirmation, class: "form-input", placeholder: "もう一度入力してください", autocomplete: "new-password" %>
        </div>

      <% end %>

      <div class="form-actions">
        <%= f.submit t("devise.invitations.edit.submit_button"), class: "btn btn-primary btn-block shadow-pulse" %>
      </div>
    <% end %>

  </div>
</div>