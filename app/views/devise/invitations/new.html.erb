<% content_for :head do %>
  <%= stylesheet_link_tag "devise/registrations", "data-turbo-track": "dynamic" %>
<% end %>

<div class="auth-container">
  <div class="auth-card fade-in-up">

    <div class="auth-header">
      <h2 class="auth-title"><%= t("devise.invitations.new.header") %></h2>
      <p class="auth-subtitle">新しい従業員に招待メールを送信して、<br>シフト管理に参加してもらいましょう。</p>
    </div>

    <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post, class: "auth-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <%# --- 名前 --- %>
      <div class="form-group">
        <%= f.label :name, t("devise.invitations.new.name"), class: "form-label" %>
        <%= f.text_field :name, required: true, class: "form-input", placeholder: "例：介護 太郎" %>
      </div>

      <%# --- メールアドレス (招待キー) --- %>
      <% resource.class.invite_key_fields.each do |field| -%>
        <div class="form-group">
          <%= f.label field, class: "form-label" %>
          <%= f.text_field field, required: true, class: "form-input", placeholder: "example@email.com" %>
        </div>
      <% end -%>

      <%# --- 所属チーム --- %>
      <div class="form-group">
        <%= f.label :team_id, t("devise.invitations.new.team"), class: "form-label" %>
        <div class="select-wrapper">
          <%= f.collection_select :team_id, @office.teams, :id, :name, { prompt: t("devise.invitations.new.team_prompt") }, { required: true, class: "form-select" } %>
        </div>
      </div>

      <%# --- 住所 --- %>
      <div class="form-group">
        <%= f.label :address, t("devise.invitations.new.address"), class: "form-label" %>
        <%= f.text_field :address, class: "form-input" %>
      </div>

      <%# --- アクションボタン --- %>
      <div class="form-actions">
        <%= f.submit t("devise.invitations.new.submit_button"), class: "btn btn-primary btn-block shadow-pulse" %>
      </div>

    <% end %>

    <%# --- 戻るリンク --- %>
    <div class="auth-footer-links">
      <% if @office && @office.teams.any? %>
        <%= link_to t("devise.invitations.new.back"), team_users_path(@office.teams.first), class: "text-link-secondary" %>
      <% else %>
        <%= link_to t("devise.invitations.new.back"), :back, class: "text-link-secondary" %>
      <% end %>
    </div>

  </div>
</div>