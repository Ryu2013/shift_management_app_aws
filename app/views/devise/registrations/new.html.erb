<% content_for :head do %>
  <%= stylesheet_link_tag "devise/registrations", "data-turbo-track": "dynamic" %>
<% end %>
<% content_for :head do %>
  <meta name="turbo-cache-control" content="no-cache">
<% end %>

<div class="auth-container">
  <div class="auth-card fade-in-up">
    
    <div class="auth-header">
      <h2 class="auth-title"><%= t(".heading") %></h2>
      <p class="auth-subtitle">    
      アカウントを作成することで、
      <%= link_to "利用規約", terms_path, target: "_blank", rel: "noopener noreferrer", class: "text-blue" %>
      および<br>
      <%= link_to "プライバシーポリシー", privacy_policy_path, target: "_blank", rel: "noopener noreferrer", class: "text-blue" %>
      に同意したものとみなします。</p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name, team_id: params[:team_id]), html: { class: "auth-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :name, t(".name"), class: "form-label" %>
        <%= f.text_field :name, autocomplete: "name", autofocus: true, required: true, class: "form-input", placeholder: "例：介護 太郎" %>
      </div>

      <div class="form-group">
        <%= f.label :email, t(".email"), class: "form-label" %>
        <%= f.email_field :email, autocomplete: "email", required: true, class: "form-input", placeholder: "example@email.com" %>
      </div>

      <div class="form-group">
        <%= f.label :password, t(".password"), class: "form-label" %>
        <% if @minimum_password_length %>
          <span class="password-hint"><%= t(".password_hint", count: @minimum_password_length) %></span>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", required: true, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, t(".password_confirmation"), class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true, class: "form-input" %>
      </div>

      <%# 編集画面などで使う項目（新規登録時は通常非表示ですが、既存ロジック通り残します） %>
      <% if resource.persisted? %>
        <div class="form-group">
          <%= f.label :address, t(".address"), class: "form-label" %>
          <%= f.text_field :address, required: true, class: "form-input" %>
        </div>

      <% end %>

      <div class="form-actions">
        <%= f.submit t(".submit"), class: "btn btn-primary btn-block shadow-pulse" %>
      </div>
    <% end %>

    <%# --- 区切り線 --- %>
    <div class="auth-divider">
      <span class="divider-text">または</span>
    </div>

    <%# --- Googleボタン --- %>
    <div class="social-login">
      <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "btn btn-google btn-block" do %>
        <svg class="google-icon" viewBox="0 0 24 24">
          <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
          <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
          <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
          <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
        </svg>
        <span>Googleで登録</span>
      <% end %>
    </div>

    <div class="auth-footer-links">
      <%= link_to t("devise.shared.links.resend_confirmation"), new_confirmation_path(resource_name), class: "text-link-sm" %>
      <br>
      <%= link_to "すでにアカウントをお持ちの方はこちら", new_session_path(resource_name), class: "text-link" %>
    </div>

  </div>
</div>
